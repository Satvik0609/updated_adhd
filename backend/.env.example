# === API KEYS ===
# Required: Groq API (for Whisper + LLM analysis)
GROQ_API_KEY=your_groq_api_key_here

# Primary transcript provider (YouTube or others)
SUPADATA_API_KEY=your_supadata_api_key_here

# Optional: AssemblyAI fallback (URL fetch + summarization)
ENABLE_ASSEMBLYAI_URL=true
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Optional: YouTube download + Whisper fallback
ALLOW_YOUTUBE_FALLBACK=true
ENABLE_YTDLP=true
ENABLE_FFMPEG=true
YOUTUBE_API_KEY=your_youtube_api_key_here


# === SERVER CONFIG ===
PORT=3001
MONGO_URI=mongodb://127.0.0.1:27017/adhd-assistant
JWT_SECRET=your_jwt_secret_here
